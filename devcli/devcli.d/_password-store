# vim: ft=sh
# Implementation for 'pass' command using 'password'
# https://www.passwordstore.org/

function _pass_show() {
  local key="${1}"
  log "called _pass_show(${key})"
  pass=$([[ -n ${key} ]] && pass show ${key} 2> /dev/null)
  echo -n ${pass%\\n}
}

function pass_get() {
  local k="${1}"
  echo $(_pass_show ${k})
}
